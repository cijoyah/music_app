<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6">
        <h1><%= @user.name %></h1>
        <%= image_tag(@user.avatar.show.url) %>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Username</strong> <%= @user.username%></td>
              </tr>
              <tr>
                <td><strong>Location</strong> <%= @user.location %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-6">
        <% @user.tracks.each do |track| %>
          <div class="panel">
            <div class="panel-body">
              <div class="row">
                <div class="col-md-3">
                  <%= image_tag track.art_work.url, class:'user-player-pic' %>
                </div>
                <div class="col-md-9">
                  <h2><%= link_to (track.title),track %></h2>
                  <%= audio_tag track.music, controls: true, class: 'index-song-player song-player'%>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

