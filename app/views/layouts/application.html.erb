<!DOCTYPE html>
<html>
<head>
  <title>ProjectOne</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
  <nav>
    <div class="login"> 
      <% if user_signed_in? %>
        <p><% current_user.email %></p>
        <p><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></p>
        <p><%= link_to('Account', edit_user_registration_path) %></p>
        <p><%= link_to 'Add Track', new_track_path %><p>
      <% else %>
        <p><%= link_to('Login', new_user_session_path) %></p>
        <p><%= link_to('Register', new_user_registration_path) %></p>
      <% end %> 
  </nav>
  <%= yield %>
</body>
</html>
