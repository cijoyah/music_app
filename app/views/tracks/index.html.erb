<h1>Tracks</h1>

<% @tracks.each do |track| %>
  <div class="post_wrapper">
    <h2 class="title"><%= link_to track.title, track %></h2>
    <p><%= image_tag track.art_work, width: 200 %></p>
    <p><%= track.music %></p>
    <p class="date"><%= time_ago_in_words (track.created_at) %></p>
      <% if track.user == current_user %>
        <%= link_to 'Delete', track, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
<% end %>


