<div class="comment">
  <div class="comment_content">
    <p>
      <strong>Comment</strong>
      <%= comment.content %>
    </p>
    <p>
    <strong>Rating</strong>
    <%= comment.rating %>
    </p>
    <p>
    <strong>User</strong>
    <%= comment.user.email %>
    </p>
    <p><%= time_ago_in_words (comment.created_at) %> Ago </p>
  </div>
  <% if user_signed_in? %>
    <p><%= link_to 'Delete', [comment.track, comment], method: :delete %></p>
  <% end %>
</div>